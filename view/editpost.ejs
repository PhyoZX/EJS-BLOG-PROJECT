<%- include("./includes/head") %>
    <h1 class="title form-title">Edit your post</h1>
    <% if(errorMsg){ %>
        <p class="msg-box"><%= errorMsg %></p>
    <% } %>    
    <section class="mx-auto">
        <form action="/admin/post-edit" method="post" enctype="multipart/form-data">
            <input hidden value="<%= csrfToken %>" name="_csrf"/>
            <input type="text" name="postId" value="<%= isValidationFail ? postId : post._id %>" hidden>
            <div>
                <label for="title">Enter title</label>
                <input type="text" id="title" name="title" value="<%= isValidationFail ? oldFormData.title : post.title %>" required > 
            </div>
            <div>
                <label for="photo">Enter photo</label>
                <input type="file" id="photo" name="photo"/>
            <div>
                <label for="description">Enter description</label>
                <textarea name="description" id="description" cols="30" rows="10"><%= isValidationFail ? oldFormData.description : post.description %></textarea>
            </div>
            <button>Update Post</button>
        </form>
    </section>
<%- include("./includes/foot") %>